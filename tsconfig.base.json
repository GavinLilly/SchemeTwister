{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@legendizer/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@legendizer/legendizer-lib": ["libs/legendizer-lib/src/index.ts"],
      "@legendizer/web-app/feature-home": [
        "libs/web-app/feature-home/src/index.ts"
      ],
      "@legendizer/web-app/feature-randomize": [
        "libs/web-app/feature-randomize/src/index.ts"
      ],
      "@legendizer/web-app/ui": ["libs/web-app/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

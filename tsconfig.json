{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@legendizer/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@legendizer/shared/gameSet/types": [
        "libs/shared/gameSet/types/src/index.ts"
      ],
      "@legendizer/shared/bystander/types": [
        "libs/shared/bystander/types/src/index.ts"
      ],
      "@legendizer/shared/henchmen/types": [
        "libs/shared/henchmen/types/src/index.ts"
      ],
      "@legendizer/shared/hero/types": ["libs/shared/hero/types/src/index.ts"],
      "@legendizer/shared/mastermind/types": [
        "libs/shared/mastermind/types/src/index.ts"
      ],
      "@legendizer/shared/scheme/types": [
        "libs/shared/scheme/types/src/index.ts"
      ],
      "@legendizer/shared/villainGroup/types": [
        "libs/shared/villainGroup/types/src/index.ts"
      ],
      "@legendizer/shared/base/types": ["libs/shared/base/types/src/index.ts"],
      "@legendizer/shared/bystander/data": [
        "libs/shared/bystander/data/src/index.ts"
      ],
      "@legendizer/shared/gameSet/data": [
        "libs/shared/gameSet/data/src/index.ts"
      ],
      "@legendizer/shared/henchmen/data": [
        "libs/shared/henchmen/data/src/index.ts"
      ],
      "@legendizer/shared/hero/data": ["libs/shared/hero/data/src/index.ts"],
      "@legendizer/shared/mastermind/data": [
        "libs/shared/mastermind/data/src/index.ts"
      ],
      "@legendizer/shared/villainGroup/data": [
        "libs/shared/villainGroup/data/src/index.ts"
      ],
      "@legendizer/shared/scheme/data": [
        "libs/shared/scheme/data/src/index.ts"
      ],
      "@legendizer/legendizer/feature-home": [
        "libs/legendizer/feature-home/src/index.ts"
      ],
      "@legendizer/legendizer/ui": ["libs/legendizer/ui/src/index.ts"],
      "@legendizer/legendizer/feature-randomize": [
        "libs/legendizer/feature-randomize/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
